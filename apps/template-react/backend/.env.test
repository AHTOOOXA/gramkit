# Test environment configuration for CI/CD and local testing
# Safe defaults - no real credentials

# App identity
APP_NAME=template-react
ENVIRONMENT=test
DEBUG=true
DEBUG_USERNAME=test_user

# Telegram Bot Configuration
BOT__TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz-test-token
BOT__URL=https://t.me/test_bot

# RBAC Configuration
RBAC__OWNER_IDS=[123456789]

# Web Configuration
WEB__APP_URL=https://t.me/test_bot/app
WEB__FRONTEND_URL=http://localhost:5173
WEB__API_URL=http://localhost:3779
WEB__API_ROOT_PATH=

# AI/LLM Configuration
OPENAI__API_KEY=sk-test-key-for-testing

# Database Configuration
DB__HOST=localhost
DB__PORT=5432
DB__USER=test_user
DB__PASSWORD=test_password
DB__NAME=test_db

# Redis Configuration
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__PASSWORD=

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBIT__URL=amqp://guest:guest@localhost:5672/
RABBIT__QUEUE_NAME=test_queue

# Payment Configuration
PAYMENT__SHOP_ID=test_shop_id
PAYMENT__SECRET_KEY=test_secret_key
PAYMENT__RECEIPT_EMAIL=test@example.com

# Session Configuration
SESSION__EXPIRE_DAYS=7
SESSION__COOKIE_SECURE=false
SESSION__COOKIE_SAMESITE=lax
SESSION__COOKIE_HTTPONLY=true

# Email Configuration
EMAIL__API_KEY=
EMAIL__FROM_ADDRESS=test@example.com
EMAIL__FROM_NAME=Test App

# Observability (disabled for tests)
OBSERVABILITY__SENTRY_DSN=
OBSERVABILITY__POSTHOG_API_KEY=
OBSERVABILITY__POSTHOG_HOST=
OBSERVABILITY__LOGFIRE_TOKEN=
OBSERVABILITY__LOGFIRE_ENVIRONMENT=test
