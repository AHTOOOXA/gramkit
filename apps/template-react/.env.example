# TEMPLATE-REACT APP ENVIRONMENT VARIABLES
# Copy this file to .env:
#   cp .env.example .env

# ============================================
# App Configuration
# ============================================
APP_NAME=template-react
ENVIRONMENT=local
DEBUG=True
DEBUG_USERNAME=debug_user

# ============================================
# TELEGRAM BOT
# ============================================
BOT__TOKEN=your_bot_token_from_botfather
BOT__URL=https://t.me/your_bot_username

# ============================================
# RBAC (Role-Based Access Control)
# ============================================
RBAC__OWNER_IDS=[your_telegram_user_id]

# ============================================
# WEB CONFIGURATION
# ============================================
WEB__APP_URL=https://t.me/your_bot_username/app
WEB__FRONTEND_URL=https://your-domain.com/template-react
WEB__API_URL=https://your-domain.com/api/template-react
WEB__API_ROOT_PATH=/api/template-react

# ============================================
# OPENAI (Optional)
# ============================================
OPENAI__API_KEY=your_openai_api_key

# ============================================
# DATABASE (Inside Docker Network)
# Note: POSTGRES_* vars are auto-mapped from DB__* in docker-compose
# ============================================
DB__HOST=db
DB__PORT=5432
DB__USER=postgres
DB__PASSWORD=postgres
DB__NAME=template_react

# ============================================
# REDIS (Inside Docker Network)
# ============================================
REDIS__HOST=redis
REDIS__PORT=6391
REDIS__PASSWORD=password

# ============================================
# RABBITMQ (Optional)
# ============================================
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBIT__URL=amqp://guest:guest@rabbitmq:5672/
RABBIT__QUEUE_NAME=bot_queue

# ============================================
# PAYMENT (YooKassa)
# ============================================
PAYMENT__SHOP_ID=your_shop_id
PAYMENT__SECRET_KEY=your_secret_key
PAYMENT__RECEIPT_EMAIL=your_email@example.com

# ============================================
# SESSION
# ============================================
SESSION__EXPIRE_DAYS=30
SESSION__COOKIE_SECURE=false
SESSION__COOKIE_SAMESITE=lax
SESSION__COOKIE_HTTPONLY=true

# ============================================
# EMAIL (Resend) - Optional
# ============================================
EMAIL__API_KEY=
EMAIL__FROM_ADDRESS=noreply@example.com
EMAIL__FROM_NAME=Template React

# ============================================
# OBSERVABILITY (Optional)
# ============================================
# OBSERVABILITY__SENTRY_DSN=your_sentry_dsn
# OBSERVABILITY__POSTHOG_API_KEY=your_posthog_key
# OBSERVABILITY__POSTHOG_HOST=https://eu.i.posthog.com
OBSERVABILITY__LOGFIRE_TOKEN=dummy_token
OBSERVABILITY__LOGFIRE_ENVIRONMENT=development

# ============================================
# NEXT.JS FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=https://your-domain.com/api/template-react
NEXT_PUBLIC_APP_NAME=Template React
NEXT_PUBLIC_BASE_PATH=/template-react
NEXT_PUBLIC_BOT_USERNAME=your_bot_username
NEXT_PUBLIC_WEB_APP_URL=https://t.me/your_bot_username/app
NEXT_PUBLIC_DEBUG=true
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# NEXT_PUBLIC_ENVIRONMENT=production

# ============================================
# MISC
# ============================================
USE_REDIS=True
