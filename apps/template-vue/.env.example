# TEMPLATE APP ENVIRONMENT VARIABLES
# Copy this file to .env:
#   cp .env.example .env

# ============================================
# App Configuration
# ============================================
APP_NAME=template
ENVIRONMENT=local
DEBUG=True
DEBUG_USERNAME=debug_user

# ============================================
# TELEGRAM BOT
# ============================================
BOT__TOKEN=your_bot_token_from_botfather
BOT__URL=https://t.me/your_bot_username

# ============================================
# RBAC (Role-Based Access Control)
# ============================================
RBAC__OWNER_IDS=[your_telegram_user_id]

# ============================================
# WEB CONFIGURATION
# ============================================
WEB__APP_URL=https://t.me/your_bot_username/app
WEB__FRONTEND_URL=https://your-domain.com
WEB__API_URL=https://your-domain.com/api/template
WEB__API_ROOT_PATH=/api/template

# ============================================
# OPENAI (Optional)
# ============================================
OPENAI__API_KEY=your_openai_api_key

# ============================================
# DATABASE (Inside Docker Network)
# Note: POSTGRES_* vars are auto-mapped from DB__* in docker-compose
# ============================================
DB__HOST=db
DB__PORT=5454
DB__USER=postgres
DB__PASSWORD=postgres
DB__NAME=template

# ============================================
# REDIS (Inside Docker Network)
# ============================================
REDIS__HOST=redis_cache
REDIS__PORT=6390
REDIS__PASSWORD=password

# ============================================
# RABBITMQ (Optional)
# ============================================
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBIT__URL=amqp://guest:guest@rabbitmq:5672/
RABBIT__QUEUE_NAME=bot_queue

# ============================================
# PAYMENT (YooKassa)
# ============================================
PAYMENT__SHOP_ID=your_shop_id
PAYMENT__SECRET_KEY=your_secret_key
PAYMENT__RECEIPT_EMAIL=your_email@example.com

# ============================================
# SESSION
# ============================================
SESSION__EXPIRE_DAYS=30
SESSION__COOKIE_SECURE=true
SESSION__COOKIE_SAMESITE=lax
SESSION__COOKIE_HTTPONLY=true

# ============================================
# EMAIL (Resend) - Optional
# ============================================
EMAIL__API_KEY=
EMAIL__FROM_ADDRESS=noreply@example.com
EMAIL__FROM_NAME=Template App

# ============================================
# OBSERVABILITY (Optional)
# ============================================
# OBSERVABILITY__SENTRY_DSN=your_sentry_dsn
# OBSERVABILITY__POSTHOG_API_KEY=your_posthog_key
# OBSERVABILITY__POSTHOG_HOST=https://eu.i.posthog.com
# OBSERVABILITY__LOGFIRE_TOKEN=your_logfire_token
# OBSERVABILITY__LOGFIRE_ENVIRONMENT=production

# ============================================
# VITE FRONTEND
# ============================================
VITE_APP_NAME=template
VITE_WEB_HOST=https://your-domain.com
VITE_API_HOST=https://your-domain.com/api/template
VITE_BOT_URL=https://t.me/your_bot_username
VITE_WEB_APP_URL=https://t.me/your_bot_username/app
VITE_DEBUG=true
VITE_LOCAL=true
# VITE_POSTHOG_KEY=your_posthog_key
# VITE_POSTHOG_HOST=https://eu.i.posthog.com
# VITE_SENTRY_ORG=your_sentry_org
# VITE_SENTRY_PROJECT=your_sentry_project
# VITE_SENTRY_DSN=your_sentry_dsn
# VITE_SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ============================================
# MISC
# ============================================
USE_REDIS=True
# CLOUDFLARED_TOKEN=  # Not needed with shared infrastructure
